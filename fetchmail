#!/usr/bin/env bash

# If there is no internet, don't attempt to sync mail.
/sbin/iwgetid &>/dev/null || echo "No internet. Interrupting..." && exit 

offlineimap -u quiet -q -f INBOX -a martinmch & pid1=$!
echo Synchronizing personal mailbox..
offlineimap -u quiet -q -f INBOX -a christiansen & pid2=$!
echo Synchronizing university mailbox..
offlineimap -u quiet -q -f INBOX -a ucph & pid3=$!
wait $pid1
wait $pid2
wait $pid3
